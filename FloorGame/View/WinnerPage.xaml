<Page x:Class="FloorGame.View.WinnerScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FloorGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WinnerScreen">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Resources/Images/winner_background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Text="Congratulations!" 
                   FontSize="36" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Left" 
                   Foreground="LightGray"
                   VerticalAlignment="Top" 
                   Margin="274,342,0,0"/>
        <TextBlock x:Name="WinnerNameText" 
                   Text="Player 1 Wins!" 
                   FontSize="28" 
                   Foreground="LightGray"
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" Margin="328,390,0,0"/>
    </Grid>
</Page>
