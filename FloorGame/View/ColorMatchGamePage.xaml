      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FloorGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ColorMatchGamePage">

    <Grid>
        <Canvas Name="boardCanvas" Background="Transparent" Height="720" Width="1280" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <local:WalkableAreaUserControl x:Name="playerArea"/>
        <Frame Name="gameEndFrame"/>
    </Grid>
</Page>
