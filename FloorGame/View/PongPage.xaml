<Page x:Class="FloorGame.View.PongPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FloorGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PongPage">

    <Canvas x:Name="GameCanvas" Background="White">
        <!-- Left Paddle -->
        <Rectangle x:Name="LeftPaddle" Width="20" Height="100" Fill="Black" Canvas.Left="30" Canvas.Top="150" />

        <!-- Right Paddle -->
        <Rectangle x:Name="RightPaddle" Width="20" Height="100" Fill="Black" Canvas.Left="750" Canvas.Top="150" />

        <!-- Ball -->
        <Ellipse x:Name="Ball" Width="20" Height="20" Fill="Black" Canvas.Left="390" Canvas.Top="215" />

        <!-- Score Texts -->
        <TextBlock x:Name="LeftScore" Text="0" FontSize="30" Foreground="Black" Canvas.Left="300" Canvas.Top="10" />
        <TextBlock x:Name="RightScore" Text="0" FontSize="30" Foreground="Black" Canvas.Right="300" Canvas.Top="10" />
    </Canvas>
</Page>
