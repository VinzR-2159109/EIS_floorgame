<Page x:Class="FloorGame.View.CalibrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FloorGame.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalibrationPage">

    <Grid>
        <Image x:Name="colorImage" Height="480" Width="640"/>
        <Canvas x:Name="skeletonOverlayCanvas" Height="480" Width="640" Background="Transparent"/>
        <TextBlock Name="gameStateText" Text="Calibration View" TextAlignment="Center" HorizontalAlignment="Center" FontSize="20" Height="50" Width="500" VerticalAlignment="Top"/>
        <local:WalkableAreaUserControl x:Name="playerArea"/>
    </Grid>
</Page>
