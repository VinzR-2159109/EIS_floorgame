<Window x:Class="floorgame.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:floorgame"
        mc:Ignorable="d"
        Title="Debug" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Color Image" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <Grid>
                    <Image x:Name="ColorImage" Height="240" Width="320"/>
                    <Canvas x:Name="SkeletonOverlayCanvas" Height="240" Width="320" Background="Transparent"/>
                </Grid>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Depth Image" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <Image x:Name="DepthImage" Height="240" Width="320" />
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
